<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.onlinetransaction">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnlineTransaction"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".View_category"
            android:exported="false" />
        <activity
            android:name=".add_to_cart"
            android:exported="false" />
        <activity
            android:name=".TRANSACTION"
            android:exported="false"
            android:label="@string/title_activity_transaction"
            android:theme="@style/Theme.OnlineTransaction.NoActionBar" />
        <activity
            android:name=".Home_page"
            android:exported="false" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name=".Home"
            android:exported="false" />
        <activity
            android:name=".loginpage"
            android:exported="false" />
        <activity
            android:name=".ViewPurchaseHistory"
            android:exported="false" />
        <activity
            android:name=".ViewCart"
            android:exported="false" />
        <activity
            android:name=".ViewProduct"
            android:exported="false" />
        <activity
            android:name=".ProfileView"
            android:exported="false" />
        <activity
            android:name=".Userregistration"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>